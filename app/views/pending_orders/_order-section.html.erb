<div class="Orders--Card">
  <div class="Item-List">
    <p class="Category-Title">
    Order #<%= order.id %>
    </p>
    <%= form_with(url: "/orders/#{order.id}", method: "patch") do |f| %>
      <%= f.submit "Complete!", name: "order_action", class: "AddMenu-Btn" %>
    <% end %>
  </div>
  <ul class="Category-List">
  <% items.each do |item| %>
      <li class="Category-Item">
        <div>
          <div class="Item-List">
          <p><%= item.menu_item_name %></p>
          <p>₹<%= item.menu_item_price %></p>
          </div>
        </div>
      </li>
  <% end %>
  </ul>
  <div class="Total">
    <h1 class="Total--item">Total:</h1>
    <p class="Total--item">₹<%= @current_user.orders.total(order.id) %></p>
  </div>
</div>
